{% extends 'base.html' %}

{% block content %}
  
<div class="container my-5 ">
  <form method="POST">
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{ user.name }}" placeholder="name" >
  </div>
  <div class="form-group">
    <label for="pass">Password</label>
    <input type="password" class="form-control" id="pass" name="pass" value="{{ user.password }}" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
</div>
{% endblock content %}